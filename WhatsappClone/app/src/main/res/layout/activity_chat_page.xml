<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatPage">

    <TextView
        android:id="@+id/msg_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/msg_phone_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Phone"
        app:layout_constraintEnd_toEndOf="@+id/msg_name_view"
        app:layout_constraintStart_toStartOf="@+id/msg_name_view"
        app:layout_constraintTop_toBottomOf="@+id/msg_name_view" />

    <TextView
        android:id="@+id/msg_online_statusview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Online"
        app:layout_constraintEnd_toEndOf="@+id/msg_phone_view"
        app:layout_constraintStart_toStartOf="@+id/msg_phone_view"
        app:layout_constraintTop_toBottomOf="@+id/msg_phone_view" />

    <EditText
        android:id="@+id/msg_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Send"
        app:layout_constraintBottom_toBottomOf="@+id/msg_area"
        app:layout_constraintStart_toEndOf="@+id/msg_area"
        android:onClick="sendMessage"/>
</androidx.constraintlayout.widget.ConstraintLayout>