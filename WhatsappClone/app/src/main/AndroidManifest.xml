<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mcgroupproject.whatsappclone">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_logo_wing"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_logo_wing_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activity.MessageActivity" />
        <activity android:name=".Activity.ProfileCreationActivity" />
        <activity android:name=".Activity.CodeVerificationActivity" />
        <activity android:name=".Activity.SignUpActivity" ></activity>
        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>